<scroll-view class="scrollarea" scroll-y>
  <van-cell title-width="200rpx" title="会议主题" value="{{ title }}" />
  <van-cell title-width="200rpx" title="会议类型" value="{{ type }}" />
  <van-cell title-width="200rpx" title="标签">
    <van-row gutter="10">
      <van-col wx:for="{{ tags }}" wx:key="index">
        <van-tag color="{{ item.color }}">
          {{ item.text }}
        </van-tag>
      </van-col>
    </van-row>
  </van-cell>
  <van-cell title-width="200rpx" title="会议时间" value="{{ time }}" />
  <van-cell title-width="200rpx" title="会议地点" value="{{ address }}" />
  <van-cell title-width="200rpx" title="参会人员(内部)">
    <van-row gutter="10">
      <van-col wx:for="{{ internal }}" wx:key="index">
        <van-tag color="#333">
          {{ item }}
        </van-tag>
      </van-col>
    </van-row>
  </van-cell>
  <van-cell
    title-width="200rpx"
    title="参会人员(外部)"
    value="{{ external }}"
  />
  <van-cell
    title-width="200rpx"
    title="会议内容"
    value="查看详情"
    is-link
    data-mode="content"
    bind:click="handleOpen"
  />
  <van-cell
    title-width="200rpx"
    title="决策事项"
    value="查看详情"
    is-link
    data-mode="decision"
    bind:click="handleOpen"
  />
  <van-cell
    title-width="200rpx"
    title="任务分配"
    value="查看详情"
    is-link
    data-mode="task"
    bind:click="handleOpen"
  />
  <van-cell title-width="200rpx" title="备注" value="{{ remark }}" />
  <van-popup
    show="{{ visible }}"
    position="bottom"
    closeable
    round
    custom-style="height: 80%;padding-left:20rpx;padding-right:20rpx"
    bind:close="handleClose"
  >
    <block wx:if="{{ mode === 'content' }}">
      <view class="detail_title"> 会议内容 </view>
      <scroll-view class="detail_scroll" scroll-y>
        <mp-html content="{{ content }}" />
      </scroll-view>
    </block>
    <block wx:elif="{{ mode === 'decision' }}">
      <view class="detail_title"> 决策事项 </view>
      <scroll-view class="detail_scroll" scroll-y>
        <mp-html content="{{ decision }}" />
      </scroll-view>
    </block>
    <block wx:elif="{{ mode === 'task' }}">
      <view class="detail_title"> 任务分配 </view>
      <scroll-view class="detail_scroll" scroll-y>
        <task-list data="{{ taskList }}" expandAll />
      </scroll-view>
    </block>
  </van-popup>
</scroll-view>
